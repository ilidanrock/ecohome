// ---------- Generators & datasource ----------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- Enums ----------
enum Role {
  USER
  ADMIN
  NULL
}

enum PaymentStatus {
  PAID
  UNPAID
}

enum PaymentMethod {
  YAPE
  CASH
  BANK_TRANSFER
}

// ---------- Modelos NextAuth ----------
model User {
  id            String   @id @default(cuid())
  name          String? 
  surname       String?
  email         String   @unique
  password      String?
  role          Role     @default(NULL)

  emailVerified DateTime?
  image         String?

  accounts      Account[]
  // --- Relaciones EcoHome ---
  rentals            Rental[]
  managedProperties  Property[] @relation("AdminProperties")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([provider, providerAccountId])
}

model VerificationToken {
  identifier String @unique
  token      String
  expires    DateTime

  @@id([identifier])
}

// ---------- Modelos EcoHome ----------
model Property {
  id          String    @id @default(uuid())
  name        String
  address     String

  // admins N : M
  administrators  User[]        @relation("AdminProperties")
  // contratos / lecturas / facturas
  rentals         Rental[]
  electricityBills ElectricityBill[]
  waterBills      WaterBill[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Rental {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId String

  startDate  DateTime
  endDate    DateTime?

  consumptions Consumption[]
  invoices     Invoice[]
  payments      Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, propertyId])
}

model Consumption {
  id            String   @id @default(uuid())
  rental        Rental   @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  rentalId      String

  month         Int
  year          Int

  previousReading Decimal? @db.Decimal(10,3)  // Nueva: lectura anterior (kWh)
  energyReading   Decimal  @db.Decimal(10,3)   // Lectura actual (kWh)
  meterImageUrl   String?
  
  // Campos de OCR
  ocrExtracted    Boolean   @default(false)     // Si fue extraído por OCR
  ocrConfidence   Decimal?  @db.Decimal(5,2)    // Confianza del OCR (0-100)
  ocrRawText      String?                       // Texto crudo extraído por OCR
  extractedAt     DateTime?                     // Fecha de extracción OCR

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([rentalId, month, year])
  @@index([year, month])
}

model ElectricityBill {
  id           String   @id @default(uuid())
  property     Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId   String

  periodStart  DateTime
  periodEnd    DateTime
  totalKWh     Decimal  @db.Decimal(10,3)
  totalCost    Decimal  @db.Decimal(12,2)
  fileUrl      String?

  serviceCharges ServiceCharges?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ServiceCharges {
  id                String         @id @default(uuid())
  electricityBill   ElectricityBill @relation(fields: [electricityBillId], references: [id], onDelete: Cascade)
  electricityBillId String         @unique
  
  // Servicios antes de IGV
  maintenanceAndReplacement Decimal @db.Decimal(12,2)  // Reposición y mantenimiento
  fixedCharge               Decimal @db.Decimal(12,2)  // Cargo fijo
  compensatoryInterest      Decimal @db.Decimal(12,2)  // Interés compensatorio
  publicLighting            Decimal @db.Decimal(12,2)  // Alumbrado público
  
  // Servicios después de IGV
  lawContribution           Decimal @db.Decimal(12,2)  // Aporte Ley N° 28749
  lateFee                   Decimal @db.Decimal(12,2)   // Recargo por mora
  previousMonthRounding     Decimal @db.Decimal(12,2)  // Redondeo Mes Anterior
  currentMonthRounding      Decimal @db.Decimal(12,2)  // Redondeo Mes Actual
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WaterBill {
  id              String   @id @default(uuid())
  property        Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  propertyId      String

  periodStart     DateTime
  periodEnd       DateTime
  totalConsumption Decimal @db.Decimal(10,3)  // Consumo en m³
  totalCost       Decimal  @db.Decimal(12,2)
  fileUrl         String?

  serviceCharges  WaterServiceCharges?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model WaterServiceCharges {
  id                String      @id @default(uuid())
  waterBill          WaterBill   @relation(fields: [waterBillId], references: [id], onDelete: Cascade)
  waterBillId       String      @unique
  
  fixedCharge               Decimal @db.Decimal(12,2)  // Cargo fijo
  sewerageCharge            Decimal @db.Decimal(12,2)  // Alcantarillado
  lateFee                   Decimal @db.Decimal(12,2)  // Recargo por mora
  previousMonthRounding     Decimal @db.Decimal(12,2)  // Redondeo Mes Anterior (puede ser negativo)
  currentMonthRounding       Decimal @db.Decimal(12,2)  // Redondeo Mes Actual (puede ser negativo)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Invoice {
  id           String        @id @default(uuid())
  rental       Rental        @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  rentalId     String

  month        Int
  year         Int

  waterCost    Decimal       @db.Decimal(12,2)
  energyCost   Decimal       @db.Decimal(12,2)
  totalCost    Decimal       @db.Decimal(12,2)

  status       PaymentStatus @default(UNPAID)
  paidAt       DateTime?
  receiptUrl   String?
  invoiceUrl   String?
  payments     Payment[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([rentalId, month, year])
  @@index([status])
}

model Payment {
  id            String        @id @default(uuid())
  
  // Relación opcional con Rental (para pagos de alquiler)
  rental        Rental?       @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  rentalId      String?
  
  // Relación opcional con Invoice (para pagos de servicios)
  invoice       Invoice?       @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  invoiceId     String?

  amount        Decimal        @db.Decimal(12,2)
  paidAt        DateTime
  paymentMethod PaymentMethod
  reference     String?        // Número de referencia/comprobante
  receiptUrl    String?        // URL del comprobante

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([rentalId])
  @@index([invoiceId])
  @@index([paidAt])
}
